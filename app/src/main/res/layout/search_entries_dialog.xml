<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="@dimen/dialog_padding">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/entry_title_input_label"/>

    <EditText
        android:id="@+id/entry_title_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/entry_title_input_hint"
        android:importantForAutofill="no"
        android:inputType="text"
        android:minHeight="48dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/entry_date_input_label"
        android:layout_gravity="center_horizontal"/>

    <Button
        android:id="@+id/date_range_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/entry_date_input_button_label"
        android:textColor="?attr/colorOnSecondary" />

    <TextView
        android:id="@+id/chosen_dates_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/selected_date_range_label"/>

</LinearLayout>